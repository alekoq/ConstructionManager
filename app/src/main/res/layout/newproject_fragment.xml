<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/newproject_gridlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:columnCount="3"
    android:focusable="true"

    android:focusableInTouchMode="true"
    android:paddingLeft="@dimen/fab_margin"
    android:paddingTop="@dimen/fab_margin"
    android:paddingRight="@dimen/fab_margin"
    android:paddingBottom="@dimen/fab_margin"
    android:useDefaultMargins="true"
    android:windowSoftInputMode="stateHidden"
    app:layout_gravity="center_horizontal|fill_horizontal|center_vertical|fill_vertical">

    <TextView
        android:id="@+id/properties_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="0"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginTop="@dimen/big_margin"
        android:text="@string/enterFeatures"
        android:textSize="18sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="0"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:layout_marginBottom="@dimen/big_margin">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/newProjectChipInputEditText"
            android:layout_width="286dp"
            android:layout_height="wrap_content"
            android:hint="@string/features"
            android:inputType="textMultiLine"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/addImage_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginBottom="@dimen/big_margin"
        android:singleLine="true"
        android:text="@string/addImage"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/gallery_imgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:contentDescription="@string/gallery"
        android:padding="@dimen/fab_margin"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <ImageButton
        android:id="@+id/document_imgBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:contentDescription="@string/document"
        android:padding="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_baseline_picture_as_pdf_24" />

    <TextView
        android:id="@+id/gallery_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:text="@string/gallery" />

    <TextView
        android:id="@+id/document_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:text="@string/document" />

</GridLayout>